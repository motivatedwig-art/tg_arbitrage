# Railway Environment Variables Template
# Copy this to your Railway environment variables

# Claude AI Configuration (REQUIRED for AI analysis)
ANTHROPIC_API_KEY=your_claude_api_key_here

# Telegram Bot Configuration (REQUIRED)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Claude AI Settings (OPTIONAL - defaults provided)
CLAUDE_MODEL=claude-3-5-haiku-20241022
CLAUDE_MAX_TOKENS=100
CLAUDE_CACHE_TTL=300

# Application Settings
NODE_ENV=production
USE_MOCK_DATA=false
PORT=3000
UPDATE_INTERVAL=600000
MIN_PROFIT_THRESHOLD=0.5
MAX_OPPORTUNITIES=50

# Database
DATABASE_PATH=./database.sqlite

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
DEBUG=false

# Web App URL (Railway auto-detects, but you can override)
WEBAPP_URL=https://webapp-production-c779.up.railway.app

# Exchange API Keys (OPTIONAL - for enhanced arbitrage scanning)
