{
  "name": "crypto-arbitrage-miniapp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npx cross-env NODE_ENV=development tsx watch src/index.ts",
    "build": "npm run build:backend && npm run build:frontend && npm run copy:backend",
    "copy:backend": "cp -r dist-backend/* dist/ 2>/dev/null || xcopy /E /I /Y dist-backend dist",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "vite build",
    "start": "npx cross-env NODE_ENV=production node dist/index.js",
    "vercel-build": "npm run build",
    "test:api": "node -e \"fetch('`https://tg-arbitrage.vercel.app/api/debug').then(r=>r.json()).then(console.log)\"",
    "test:local": "NODE_ENV=production npm start",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "bot": "node -r dotenv/config dist/index.js",
    "bot:dev": "npx tsc -p tsconfig.backend.json && npm run bot"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@telegram-apps/sdk": "^1.0.0",
    "@types/pg": "^8.15.5",
    "@vercel/node": "^3.0.0",
    "axios": "^1.5.0",
    "ccxt": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "framer-motion": "^10.16.0",
    "helmet": "^8.1.0",
    "i18next": "^23.7.0",
    "i18next-fs-backend": "^2.6.0",
    "lucide-react": "^0.263.0",
    "node-cron": "^3.0.0",
    "node-telegram-bot-api": "^0.64.0",
    "pg": "^8.16.3",
    "psql": "^0.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "react-query": "^3.39.0",
    "sqlite3": "^5.1.0",
    "styled-components": "^6.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.6",
    "vite": "^4.4.0",
    "vite-plugin-pwa": "^0.16.0"
  }
}
